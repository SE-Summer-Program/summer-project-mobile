<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shallow_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/largePadding"
        android:layout_marginHorizontal="@dimen/largePadding">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:background="@color/shallow_white"/>
        <TextView
            android:id="@+id/record_submittime"
            android:layout_width="0sp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble"
            android:textColor="@color/primary_white"
            android:padding="@dimen/basicPaddingSize"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="0sp"
            android:layout_weight="4.5"
            android:layout_height="match_parent"
            android:background="@color/shallow_white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/shallow_white"
        android:layout_marginBottom="@dimen/smallPadding"
        android:layout_marginHorizontal="@dimen/largePadding"
        android:paddingHorizontal="@dimen/screenPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/basicPaddingSize">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_bus_128"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/record_linename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/record_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/basicPaddingSize">
            <TextView
                android:id="@+id/record_departuremsg"
                android:layout_width="0sp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/record_shiftid"
                android:layout_width="0sp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="0sp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_gravity="end"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/basicPaddingSize">
            <TextView
                android:id="@+id/record_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/record_qrcode"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/shallow_white"/>
            <Button
                android:id="@+id/record_cancelbtn"
                style="@style/middleButton"
                android:layout_width="0sp"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:text="@string/cancel_info"
                android:background="@color/primary_red"/>
            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/shallow_white"/>
            <Button
                android:id="@+id/record_remindbtn"
                style="@style/middleButton"
                android:layout_width="0sp"
                android:layout_weight="3.5"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:text="@string/remind_info"
                android:background="@color/primary_red"/>
            <TextView
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/shallow_white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>