<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:elevation="2dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/searchbox_background"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/map_search_box"
            android:layout_width="230dp"
            android:hint="@string/search_hint"
            android:background="@null"
            android:paddingStart="10dp"
            android:inputType="text"
            android:layout_height="50dp" />
        <ImageView
            android:id="@+id/search_btn"
            android:src="@mipmap/icon_search_128"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:alpha="1"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="140dp"
        fab:fab_addButtonColorNormal="@color/primary_white"
        fab:fab_addButtonColorPressed="@color/primary_red"
        fab:fab_addButtonPlusIconColor="@color/primary_red"
        fab:fab_expandDirection="up"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/primary_white"
            fab:fab_colorPressed="@color/primary_red"
            fab:fab_size="mini"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/primary_white"
            fab:fab_colorPressed="@color/primary_red"
            fab:fab_title="Click to remove"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/primary_white"
            fab:fab_colorPressed="@color/primary_red"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/primary_white"
            fab:fab_title="Set bottom menu enabled/disabled"
            fab:fab_colorPressed="@color/primary_red"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <!--fab:fab_labelStyle="@style/menu_labels_style"-->

    <com.yinglan.scrolllayout.ScrollLayout
        android:id="@+id/scroll_down_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!--<com.yinglan.scrolllayout.content.ContentScrollView-->
        <ScrollView

            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/shallow_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 站点名 -->
                <TextView
                    android:id="@+id/detail_station_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/smallPadding"
                    android:textSize="@dimen/middleText"
                    android:textStyle="bold"
                    android:textColor="@color/shallow_black"/>

                <!-- 逆时针 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallPadding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/anticlockwise"
                        android:textSize="@dimen/middlesmallText"
                        android:textStyle="bold"
                        android:textColor="@color/primary_black"/>
                    <TextView
                        android:id="@+id/detail_anticlockwise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/smallText"
                        android:paddingVertical="@dimen/basicPaddingSize"
                        android:lineSpacingExtra = "@dimen/basicPaddingSize"/>
                </LinearLayout>

                <!-- 顺时针 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallPadding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/clockwise"
                        android:textSize="@dimen/middlesmallText"
                        android:textStyle="bold"
                        android:textColor="@color/shallow_black"/>
                    <TextView
                        android:id="@+id/detail_clockwise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/basicPaddingSize"
                        android:lineSpacingExtra = "@dimen/basicPaddingSize"/>
                </LinearLayout>

                <!-- 寒暑假-逆时针 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallPadding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vac_anticlockwise"
                        android:textSize="@dimen/middlesmallText"
                        android:textStyle="bold"
                        android:textColor="@color/shallow_black"/>
                    <TextView
                        android:id="@+id/detail_anticlockwise_holiday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/basicPaddingSize"
                        android:lineSpacingExtra = "@dimen/basicPaddingSize"/>
                </LinearLayout>

                <!-- 寒暑假-顺时针 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallPadding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vac_clockwise"
                        android:textSize="@dimen/middlesmallText"
                        android:textStyle="bold"
                        android:textColor="@color/shallow_black"/>
                    <TextView
                        android:id="@+id/detail_clockwise_holiday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/basicPaddingSize"
                        android:lineSpacingExtra = "@dimen/basicPaddingSize"/>
                </LinearLayout>

                <!-- Comment -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/smallPadding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/middlesmallText"
                        android:text="@string/remark"
                        android:textStyle="bold"
                        android:textColor="@color/shallow_black"/>
                    <TextView
                        android:id="@+id/detail_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/basicPaddingSize"
                        android:lineSpacingExtra = "@dimen/basicPaddingSize"/>
                </LinearLayout>
            </LinearLayout>

        <!--</com.yinglan.scrolllayout.content.ContentScrollView>-->
        </ScrollView>

    </com.yinglan.scrolllayout.ScrollLayout>

</FrameLayout>