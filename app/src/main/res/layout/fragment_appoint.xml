<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appoint_departureplace"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/minhang"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:focusable="true"
            android:clickable="true" />

        <ImageView
            android:id="@+id/revert_place_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/come_and_back"/>

        <TextView
            android:id="@+id/appoint_arriveplace"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="@string/xuhui"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:focusable="true"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appoint_singlewaydate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:focusable="true"
            android:clickable="true"/>

        <TextView
            android:id="@+id/appoint_doublewaydate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/textPadding"
            android:clickable="true" />

    </LinearLayout>

