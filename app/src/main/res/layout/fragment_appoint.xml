<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appoint_departureplace"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="闵行校区"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:clickable="true" />

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/come_and_back"/>

        <TextView
            android:id="@+id/appoint_arriveplace"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="徐汇校区"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/text_padding"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appoint_singlewaydate"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="@dimen/text_padding"
            android:clickable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/appoint_doublewaydate"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="@dimen/normalTextSize"
            android:textColor="@color/primary_black"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="@dimen/text_padding"
            android:clickable="true" />

    </LinearLayout>

    <Button
        android:id="@+id/appoint_searchbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "查 询"
        android:textSize="@dimen/normalTextSize"
        android:layout_marginTop="@dimen/largePadding"
        android:textColor="@color/primary_white"
        android:background="@color/primary_red"
        android:paddingVertical="@dimen/smallPadding"
        android:layout_marginHorizontal="@dimen/smallPadding" />

</LinearLayout >