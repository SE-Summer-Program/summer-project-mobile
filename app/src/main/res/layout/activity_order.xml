                android:layout_gravity="center"/>
            <CheckBox
                android:id="@+id/order_setremind"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:text="@string/set_remind"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_remind_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/shallow_white"
            android:layout_marginBottom="2dp"
            android:padding="@dimen/smallPadding">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:text="@string/remindtime_title"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:gravity="center|end" />
            <TextView
                android:id="@+id/order_setremindtime"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:text="@string/remindtime_default"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableEnd="@drawable/more_8"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:textSize="12sp"/>
        </LinearLayout>

