    <!--设置特殊需求-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/shallow_white"
            android:layout_marginBottom="2dp"
            android:paddingVertical="@dimen/smallPadding"
            android:paddingHorizontal="18dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/icon_need_128"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/order_setneed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:text="@string/set_requirement"/>
            <ImageView
                android:id="@+id/order_setneed_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/more_48"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_need1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/shallow_white"
            android:layout_marginBottom="2dp"
            android:paddingVertical="@dimen/smallPadding"
            android:paddingHorizontal="22dp">
            <CheckBox
                android:id="@+id/order_need_checkbox1"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:text="@string/front_seat"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_need2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/shallow_white"
            android:layout_marginBottom="2dp"
            android:paddingVertical="@dimen/smallPadding"
            android:paddingHorizontal="22dp">
            <CheckBox
                android:id="@+id/order_need_checkbox2"
                android:layout_width="0dp"
                android:layout_weight="3.5"
