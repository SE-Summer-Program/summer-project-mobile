<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_order"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_red"
        app:titleTextColor="@color/primary_white"
        app:popupTheme="@style/Theme.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/appoint_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/primary_white"
            android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/screenPadding"
        android:paddingVertical="@dimen/largePadding"
        android:background="@color/primary_red">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_departureplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/order_departuretime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:textStyle="bold"
                android:text="12:15"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_shiftid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:text="MXHD1215"
                android:gravity="center"/>
            <TextView
                android:id="@+id/order_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:text="备注"
                android:gravity="center"/>
            <TextView
                android:id="@+id/order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_arriveplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:gravity="center"/>
            <TextView
                android:id="@+id/order_arrivetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_white"
                android:textStyle="bold"
                android:text="13:15"
                android:gravity="center"/>
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>