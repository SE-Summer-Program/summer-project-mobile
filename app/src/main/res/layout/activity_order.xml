            android:paddingHorizontal="22dp">
            <CheckBox
                android:id="@+id/order_need_checkbox4"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="match_parent"
                android:text="@string/road_seat"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="5.5"
                android:layout_height="match_parent"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_need5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/shallow_white"
            android:layout_marginBottom="2dp"
            android:paddingVertical="@dimen/smallPadding"
            android:paddingHorizontal="22dp">
            <CheckBox
                android:id="@+id/order_need_checkbox5"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="@string/other_seat"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_gray"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:textSize="14sp"/>
            <com.sjtubus.widget.ClearEditText
                android:id="@+id/order_edittext"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>

    <!--预约提交按钮-->
    <Button
        android:id="@+id/order_confirm"
        style="@style/bigButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        android:background="@color/primary_red"
        android:text="@string/submit_appoint" />

</LinearLayout>
