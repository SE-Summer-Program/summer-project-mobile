<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:id="@+id/container"
    android:layout_marginVertical="@dimen/textPadding"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/appointitem_departuretime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="07:45"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/appointitem_departureplace"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="闵行"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/appointitem_shiftid"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:text="MXWD0745"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/appointitem_arrivetime"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="08:45"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/appointitem_arriveplace"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="徐汇"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/appointitem_remainseat"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text="剩余5座"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/appointitem_expand"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/more_16"
        android:layout_gravity="center"/>

    <!--<View-->
        <!--android:id="@+id/parent_dashed_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:layerType="software"-->
        <!--android:layout_below="@id/appoint_parent"/>-->

</LinearLayout>